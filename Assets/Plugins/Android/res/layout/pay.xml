                    android:layout_gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/product5_buy_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
